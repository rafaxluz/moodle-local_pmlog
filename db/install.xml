<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/pmlog/db" VERSION="2026011100" COMMENT="PM Log tables">
  <TABLES>
    <TABLE NAME="local_pmlog_events" COMMENT="Normalized event log for process mining">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="caseid" TYPE="char" LENGTH="80" NOTNULL="true"/>
        <FIELD NAME="activity" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="cmid" TYPE="int" LENGTH="10" NOTNULL="false"/>
        <FIELD NAME="component" TYPE="char" LENGTH="100" NOTNULL="false"/>
        <FIELD NAME="eventname" TYPE="char" LENGTH="255" NOTNULL="false"/>
        <FIELD NAME="action" TYPE="char" LENGTH="50" NOTNULL="false"/>
        <FIELD NAME="target" TYPE="char" LENGTH="100" NOTNULL="false"/>
        <FIELD NAME="metajson" TYPE="text" NOTNULL="false"/>
	<FIELD NAME="activitygroup" TYPE="char" LENGTH="100" NOTNULL="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="idx_course_time" UNIQUE="false" FIELDS="courseid,timecreated"/>
        <INDEX NAME="idx_case_time" UNIQUE="false" FIELDS="caseid,timecreated"/>
        <INDEX NAME="idx_user_course" UNIQUE="false" FIELDS="userid,courseid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
